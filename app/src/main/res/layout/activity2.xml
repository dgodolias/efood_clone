<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/showStoresButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Show stores within 5 km radius" />

    <Button
        android:id="@+id/filterStoresButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter stores"
        android:visibility="visible"
        tools:visibility="visible" />

    <Button
        android:id="@+id/makePurchaseButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make a purchase" />

    <Button
        android:id="@+id/rateStoreButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rate a store" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exit" />
</LinearLayout>